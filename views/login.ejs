<%layout('partials/boilerplate')-%>

<section id="book-a-table" class="book-a-table" style="padding-top: 200px;">
    <div class="container" data-aos="fade-up">
        <div class="section-title text-center">
            <p>Login</p>
        </div>
        <form action="/login" class="container my-5 w-xl-50 php-email-form needs-validation" method="POST"
            enctype="multipart/form-data" novalidate>
            <div class="mb-3">
                <input type="text" class="form-control" name="userName" placeholder="Username" required>
                <div class="invalid-feedback">
                    Invalid Title.
                </div>
            </div>
            <div class="mb-3">
                <textarea class="form-control" rows="3" name="password" placeholder="Password"
                    required></textarea>
                <div class="invalid-feedback">
                    Invalid description
                </div>
            </div>
            <button type="submit" class="btn btn-dark float-end">Make post</button>
        </form>
        <!-- <a href="/auth/facebook">Login with facebook</a> -->
        <!-- <a href="/auth/twitter">Login with twitter</a> -->
    </div>
</section>
